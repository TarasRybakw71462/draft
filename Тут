      <label><input type="radio" name="poziom" value="podstawowy" required> Podstawowy</label>
      <label><input type="radio" name="poziom" value="sredni"> Średni</label>

      <label for="termin">Termin warsztatu:</label>
      <input type="date" id="termin" required>
      <span class="blad" id="bladData"></span>

      <button type="submit">Zapisz się</button>

document.getElementById("formularzWarsztaty").addEventListener("submit", function (e) {
  e.preventDefault();

  // Pobieranie wartości z pól
  const imieNazwisko = document.getElementById("imieNazwisko").value.trim();
  const email = document.getElementById("email").value.trim();
  const termin = document.getElementById("termin").value;
  const emailRegex = /^[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$/;

  // Czyszczenie błędów
  document.getElementById("bladNazwisko").textContent = "";
  document.getElementById("bladEmail").textContent = "";
  document.getElementById("bladData").textContent = "";
  document.getElementById("potwierdzenie").textContent = "";

  let poprawne = true;

  // Walidacja nazwiska – minimum 2 znaki (zakładamy, że całe pole to imię i nazwisko)
  if (imieNazwisko.length < 2) {
    document.getElementById("bladNazwisko").textContent = "Imię i nazwisko musi mieć co najmniej 2 znaki.";
    poprawne = false;
  }

  // Walidacja e-maila przez regex
  if (!emailRegex.test(email)) {
    document.getElementById("bladEmail").textContent = "Wprowadź poprawny adres e-mail.";
    poprawne = false;
  }

  // Walidacja daty – nie może być wcześniejsza niż dziś
  const dzisiaj = new Date().toISOString().split("T")[0];
  if (termin < dzisiaj) {
    document.getElementById("bladData").textContent = "Termin nie może być z przeszłości.";
    poprawne = false;
  }

  // Jeśli dane poprawne, pokaż potwierdzenie
  if (poprawne) {
    document.getElementById("potwierdzenie").textContent = "Dziękujemy za zapis! Skontaktujemy się mailowo.";
    document.getElementById("formularzWarsztaty").reset();
  }
});

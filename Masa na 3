<body>
  <div class="container">
    <h1>Dziennik połowów</h1>

    <!-- Formularz dodawania połowu -->
    <form id="formularzPolowu">
      <label for="gatunek">Gatunek ryby:</label>
      <input type="text" id="gatunek" required>
      <span class="blad" id="bladGatunek"></span>

      <label for="data">Data połowu:</label>
      <input type="date" id="data" required>
      <span class="blad" id="bladData"></span>

      <label for="masa">Masa (kg):</label>
      <input type="number" step="0.1" id="masa" required>
      <span class="blad" id="bladMasa"></span>

      <label for="dlugosc">Długość (cm):</label>
      <input type="number" id="dlugosc" required>
      <span class="blad" id="bladDlugosc"></span>

      <label for="miejsce">Miejsce połowu:</label>
      <input type="text" id="miejsce" placeholder="Np. Jezioro Wigry, pomost 3">

      <button type="submit">Dodaj wpis</button>
    </form>

    <h2>Historia połowów</h2>
    <div id="listaWpisow"></div>
  </div>

  <script src="script.js"></script>

document.getElementById("formularzPolowu").addEventListener("submit", function (e) {
  e.preventDefault();

  // Pobieranie wartoÅ›ci
  var gatunek = document.getElementById("gatunek").value.trim();
  var data = document.getElementById("data").value;
  var masa = parseFloat(document.getElementById("masa").value);
  var dlugosc = parseInt(document.getElementById("dlugosc").value);
  var miejsce = document.getElementById("miejsce").value.trim();

  // Czyszczenie bÅ‚Ä™dÃ³w
  document.getElementById("bladGatunek").textContent = "";
  document.getElementById("bladData").textContent = "";
  document.getElementById("bladMasa").textContent = "";
  document.getElementById("bladDlugosc").textContent = "";

  var poprawne = true;

  // Walidacja gatunku â€“ min. 3 litery, wielka litera na poczÄ…tku
  var wzorzecGatunek = /^[A-ZÄ„Ä†Ä˜ÅÅƒÃ“ÅšÅ¹Å»][a-zÄ…Ä‡Ä™Å‚Å„Ã³Å›ÅºÅ¼]{2,}$/;
  if (!wzorzecGatunek.test(gatunek)) {
    document.getElementById("bladGatunek").textContent = "Gatunek musi zaczynaÄ‡ siÄ™ wielkÄ… literÄ… i mieÄ‡ min. 3 litery.";
    poprawne = false;
  }

  // Walidacja daty â€“ nie moÅ¼e byÄ‡ z przyszÅ‚oÅ›ci
  var dzisiaj = new Date().toISOString().split("T")[0];
  if (data > dzisiaj) {
    document.getElementById("bladData").textContent = "Data nie moÅ¼e byÄ‡ z przyszÅ‚oÅ›ci.";
    poprawne = false;
  }

  // Walidacja masy â€“ liczba z dokÅ‚adnoÅ›ciÄ… do 0.1, np. 0.5â€“100 kg
  if (isNaN(masa) || masa < 0.1 || masa > 100) {
    document.getElementById("bladMasa").textContent = "Masa musi byÄ‡ miÄ™dzy 0.1 a 100 kg.";
    poprawne = false;
  }

  // Walidacja dÅ‚ugoÅ›ci â€“ tylko liczby 5â€“200 cm
  if (isNaN(dlugosc) || dlugosc < 5 || dlugosc > 200) {
    document.getElementById("bladDlugosc").textContent = "DÅ‚ugoÅ›Ä‡ musi byÄ‡ miÄ™dzy 5 a 200 cm.";
    poprawne = false;
  }

  if (!poprawne) return;

  // Tworzenie nowego wpisu
  var wpis = document.createElement("div");
  wpis.className = "wpis";

  var tekst = "ğŸ£ Gatunek: " + gatunek +
    " | Data: " + data +
    " | Masa: " + masa + " kg" +
    " | DÅ‚ugoÅ›Ä‡: " + dlugosc + " cm";

  if (miejsce) {
    tekst += " | Miejsce: " + miejsce;
  }

  wpis.textContent = tekst;

  document.getElementById("listaWpisow").appendChild(wpis);

  // Czyszczenie formularza
  document.getElementById("formularzPolowu").reset();
});

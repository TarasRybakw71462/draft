  background-color: #228c45;
}

.blad {
  color: red;
  font-size: 0.9em;
}

#listaWpisow {
  margin-top: 20px;
}

.wpis {
  background: #f0f4f8;
  border-left: 4px solid #29bb5b;
  padding: 10px;
  margin-bottom: 10px;
}





document.getElementById("formularzPolowu").addEventListener("submit", function (e) {
  e.preventDefault();

  // Pobieranie wartości
  var gatunek = document.getElementById("gatunek").value.trim();
  var data = document.getElementById("data").value;
  var masa = parseFloat(document.getElementById("masa").value);
  var dlugosc = parseInt(document.getElementById("dlugosc").value);
  var miejsce = document.getElementById("miejsce").value.trim();

  // Czyszczenie błędów
  document.getElementById("bladGatunek").textContent = "";
  document.getElementById("bladData").textContent = "";
  document.getElementById("bladMasa").textContent = "";
  document.getElementById("bladDlugosc").textContent = "";

  var poprawne = true;

  // Walidacja gatunku – min. 3 litery, wielka litera na początku
  var wzorzecGatunek = /^[A-ZĄĆĘŁŃÓŚŹŻ][a-ząćęłńóśźż]{2,}$/;
  if (!wzorzecGatunek.test(gatunek)) {
    document.getElementById("bladGatunek").textContent = "Gatunek musi zaczynać się wielką literą i mieć min. 3 litery.";
    poprawne = false;
  }

  // Walidacja daty – nie może być z przyszłości
  var dzisiaj = new Date().toISOString().split("T")[0];
  if (data > dzisiaj) {
    document.getElementById("bladData").textContent = "Data nie może być z przyszłości.";
    poprawne = false;
  }

  // Walidacja masy – liczba z dokładnością do 0.1, np. 0.5–100 kg
  if (isNaN(masa) || masa < 0.1 || masa > 100) {
    document.getElementById("bladMasa").textContent = "Masa musi być między 0.1 a 100 kg.";
    poprawne = false;
  }

  // Walidacja długości – tylko liczby 5–200 cm
  if (isNaN(dlugosc) || dlugosc < 5 || dlugosc > 200) {
    document.getElementById("bladDlugosc").textContent = "Długość musi być między 5 a 200 cm.";
    poprawne = false;
  }

  if (!poprawne) return;

  // Tworzenie nowego wpisu
  var wpis = document.createElement("div");
  wpis.className = "wpis";

  var tekst = "🎣 Gatunek: " + gatunek +
    " | Data: " + data +
    " | Masa: " + masa + " kg" +
    " | Długość: " + dlugosc + " cm";

  if (miejsce) {
    tekst += " | Miejsce: " + miejsce;
  }

  wpis.textContent = tekst;

  document.getElementById("listaWpisow").appendChild(wpis);

  // Czyszczenie formularza
  document.getElementById("formularzPolowu").reset();
});
